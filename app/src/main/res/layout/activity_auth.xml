<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/descubreVerdeOscuro"
    tools:context=".AuthActivity">

    <LinearLayout
        android:id="@+id/authLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/descubremasLogo"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            app:srcCompat="@drawable/ic_account" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/descubreBeige"
            android:ems="10"
            android:foregroundTint="@color/descubreBeige"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/descubreFakewhite" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/descubreBeige"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/descubreFakewhite" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/signupButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/descubreNegroButton"
                android:text="Registrar"
                android:textAllCaps="false"
                android:textColor="@color/descubreFakewhite"
                app:cornerRadius="3dp"
                app:strokeColor="@color/descubreFakewhite"
                app:strokeWidth="1dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/loginButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/descubreNegroButton"
                android:text="Acceder"
                android:textAllCaps="false"
                android:textColor="@color/descubreFakewhite"
                app:cornerRadius="3dp"
                app:strokeColor="@color/descubreFakewhite"
                app:strokeWidth="1dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <ImageButton
            android:id="@+id/googleButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/descubreVerdeOscuro"
            app:srcCompat="@drawable/logingooglex1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>